<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.ad.mycart">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        >


        <activity
            android:name=".HomepageActivity"
            android:label="LogicUTY">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".logicuty_clerk.Activity.RequisitionList_Clerk"
            android:label="LogicUTY">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".logicuty_clerk.Activity.Clerk_MainActivity"
            android:label="LogicUTY">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".logicuty_clerk.Activity.RequisitionActivity_Clerk">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".logicuty_clerk.Activity.ClerkHome"
            android:label="LogicUTY" />
        <activity android:name=".logicuty_clerk.Activity.Clerk_PurchaseOrderActivity" />
        <activity android:name=".logicuty_clerk.Activity.ClerkViewCart"></activity>





        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".HomepageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomepageActivity" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>


        </activity>

        <activity android:name=".ProductActivity"
           android:label="LogicUTY"
            android:parentActivityName=".MainActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity" />
        </activity>

        <activity android:name=".ShoppingCartActivity"
            android:label="LogicUTY"
            android:parentActivityName=".MainActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainActivity" />
        </activity>

    </application>

</manifest>