<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_clerk_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:context="logicuty_clerk.Activity.ClerkHome"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#CE93D8"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcomeMsg"
            android:layout_marginTop="16dp"
            android:paddingLeft="8dp"
            android:paddingBottom="5dp"/>
        <View
            android:layout_height="2dip"
            android:background="#FF909090"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:paddingBottom="10dp"/>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:layout_width="0dip"
                    android:layout_height="197dp"
                    android:layout_gravity="center"
                    android:src="@drawable/outstanding_ic"/>
                <ImageView
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:layout_width="0dip"
                    android:layout_height="197dp"
                    android:layout_gravity="center"
                    android:src="@drawable/requisition_ic"/>
            </TableRow>
            <TableRow
                android:layout_width="0dp">
                <Button
                    android:layout_column="1"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Mange Role"
                    android:id="@+id/outstanding_click"/>
                <Button
                    android:layout_column="2"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Approve/cancel"
                    android:id="@+id/requisition_click"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>
